{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "routes": [
    { "src": "^/$", "dest": "/api/index.js" },
    { "src": "^/api/(.*)", "dest": "/api/$1" }
  ],
  "env": {
    "APP_AUTH_KEY": "@app_auth_key",
    "DATABASE_URL": "@database_url",
    "STORAGE_PROVIDER": "vercel-blob"
  },
  "regions": ["iad1"]
}